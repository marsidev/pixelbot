{
  "manifest_version": 2,
  "name": "Pixelbot - Enhanced Wplace Bot",
  "version": "2.0.2",
  "description": "Enhanced wplace.live automation tool",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "webRequestFilterResponse",
    "activeTab",
    "*://wplace.live/*",
    "*://backend.wplace.live/*"
  ],
  "web_accessible_resources": [
    "./src/hooks.js",
    "./src/popup.html",
    "./src/popup.js"
  ],
  "icons": {
    "96": "images/icon96.png"
  },
  "background": {
    "scripts": ["dist/override.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://wplace.live/*"],
      "js": ["remove-service-worker.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://wplace.live/*"],
      "js": ["injector.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{77f8b3dc-31b3-45a7-b5bc-b5bd2d517f4f}",
      "update_url": "https://raw.githubusercontent.com/marsidev/pixelbot/main/updates.json"
    }
  }
}
