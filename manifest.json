{
  "manifest_version": 2,
  "name": "Wplace Bot",
  "version": "1.4",
  "description": "Wplace automation bot",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "webRequestFilterResponse",
    "activeTab",
    "*://wplace.live/*",
    "*://backend.wplace.live/*"
  ],
  "web_accessible_resources": [
    "./src/hooks.js",
    "./src/popup.html",
    "./src/popup.js"
  ],
  "icons": {
    "96": "images/icon96.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://wplace.live/*"
      ],
      "js": [
        "remove-service-worker.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://wplace.live/*"
      ],
      "js": [
        "injector.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{2ef7d5ae-91fe-471d-a333-4f7754aaaeff}",
      "update_url": "https://raw.githubusercontent.com/kalintas/wplace-bot/main/update.json"
    }
  }
}